{
    "name": "nofutur3/nette-sentry",
    "type": "library",
    "description": "Nette integration for Sentry (http://getsentry.com)",
    "keywords": ["logging", "errors", "nette", "sentry", "raven"],
    "homepage": "http://getsentry.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Vyvazil",
            "homepage":"https://www.vyvazil.cz",
            "email": "jakub@vyvazil.cz"
        }
    ],
    "require": {
        "php": "^7.0",
        "sentry/sentry": "^1.5",
        "nette/nette": "^2.2"
    },
    "require-dev": {
        "codeception/codeception": "^2.2",
        "friendsofphp/php-cs-fixer": "^2.10",
        "phpstan/phpstan-nette": "^0.9.0",
        "phpstan/phpstan": "^0.9.2"
    },
    "autoload": {
        "psr-0" : {
            "Nofutur3\\Sentry\\": "src/"
        }
    },
    "scripts":{
        "ci": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "cs-check": "vendor/bin/php-cs-fixer fix --stop-on-violation --dry-run",
        "stan": "vendor/bin/phpstan analyse --no-progress --level=max --configuration=phpstan.neon src tests",
        "test": ["vendor/bin/codecept build","vendor/bin/codecept run"]
    }
}
